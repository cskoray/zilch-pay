<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet author="koray.kaya" id="111111-1">
    <createTable tableName="users">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_key" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(35)">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="payment_token" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="debit_card_number" type="VARCHAR(16)">
        <constraints nullable="false"/>
      </column>
      <column name="debit_cvv" type="VARCHAR(3)">
        <constraints nullable="false"/>
      </column>
      <column name="debit_expiry" type="VARCHAR(4)">
        <constraints nullable="false"/>
      </column>
      <column name="zilch_card_number" type="VARCHAR(16)">
        <constraints nullable="false"/>
      </column>
      <column name="zilch_cvv" type="VARCHAR(3)">
        <constraints nullable="false"/>
      </column>
      <column name="zilch_expiry" type="VARCHAR(4)">
        <constraints nullable="false"/>
      </column>
      <column name="zilch_credit_limit" type="DECIMAL(11,2)" defaultValue="0.00">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="koray.kaya" id="111111-2">
    <createTable tableName="brands">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="VARCHAR(35)">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="koray.kaya" id="111111-3">
    <createTable tableName="transactions">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_key" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="payment_token" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="merchant_name" type="VARCHAR(35)">
        <constraints nullable="false"/>
      </column>
      <column name="amount" type="DECIMAL(11,2)"/>
      <column name="created_date" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>